<div class="flex flex-col h-full w-full items-center justify-center">
  <div class="flex flex-col h-full w-1/2 items-center justify-center gap-4">
    <h2 class="text-xl font-bold">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field flex flex-col w-full">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="actions w-full">
        <%= f.submit "Reset password" %>
      </div>
    <% end %>

    <div class="text-xs flex flex-row items-center justify-center gap-4 mt-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
