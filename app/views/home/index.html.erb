<div data-controller="home" 
  data-action="keydown.ctrl+c->home#showCommandForm keydown.j->home#nextBox keydown.k->home#prevBox" 
  class="flex flex-col h-full w-full gap-4 p-4 text-sm text-muted-foreground" >

  <%= render 'home/header/navbar' %>
  
  <div data-controller="manager"
    data-action="
      keydown.ctrl+down->manager#nextItem 
      keydown.ctrl+up->manager#prevItem 
      keydown.ctrl+right->manager#nextItem 
      keydown.ctrl+left->manager#prevItem
      keydown.enter->manager#showTask
      reset-manager@window->manager#resetManager"
    class="flex flex-col md:flex-row h-full w-full gap-4 overflow-hidden">
    <div data-manager-target="list" class="h-fit md:h-full w-full md:w-fit">
      <%= render partial: 'home/category/list',
        locals: { id: 'category-list-container',
                  index: 0
        },
        layout: 'home/shared/home_box'
      %>
    </div>
    <div data-manager-target="list" class="h-full w-full overflow-hidden">
      <%= render partial: 'home/task/list',
        locals: { id: 'task-list-container',
                  index: 1
        },
        layout: 'home/shared/home_box' 
      %>
    </div>
    <div data-manager-target="list" class="h-fit md:h-full w-full md:w-fit">
      <%= render partial: 'home/due_date/list',
        locals: { id: 'due-date-list-container',
                  index: 2
        },
        layout: 'home/shared/home_box'
      %>
  </div>
    
  </div>
  <div 
    data-controller="terminal" 
    data-action="show-command-form@window->terminal#showCommandForm"
    class="h-14" >
    <%= render partial: 'home/terminal/container',
      locals: { id: 'terminal-container',
                index: 3
      },
      layout: 'home/shared/home_box'
    %>
  </div>

  <%= render_toast header: "Test",
    id: "home_toast",
    description: "Test",
    auto: false,
    class: "hidden"
  %>
</div>
