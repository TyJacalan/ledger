<div 
  data-controller="home" 
  data-action="keydown.ctrl+c->home#showCommandForm keydown.ctrl+v->home#showToast" 
  class="flex flex-col h-full w-full gap-4 p-4 text-sm text-muted-foreground"
  >
  <%= render 'home/header/navbar' %>

  <div class="flex-1 flex flex-col md:flex-row h-full w-full gap-4 overflow-hidden">
    <%= render 'home/category/list' %>
    <%= render 'home/task/list' %>
    <%= render 'home/due_date/list' %>
  </div>

  <div 
    data-controller="terminal" 
    data-action="show-command-form@window->terminal#showCommandForm"
    class="h-12 w-full flex items-center justify-start home-box" 
    id="terminal-container" 
    tabindex="5"
    >
    <%= render 'home/terminal/container' %>
  </div>
  
    <%= render_toast header: "Test",
      id: "home_toast",
      description: "Test",
      auto: false,
      class: "hidden"
    %>
</div>
