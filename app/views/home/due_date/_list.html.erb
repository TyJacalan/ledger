<h1 class="text-primary px-1 text-nowrap mb-2">Due Dates</h1>
<ul id="due-date-list" class="flex flex-row md:flex-col items-start justify-start gap-4 overflow-x-auto">
  <% @due_dates.each do |due_date| %>
    <%= turbo_frame_tag "dueDateItem", class: "w-full" do %>
      <li data-due-date-id=<%= "due_Date_#{Date.parse(due_date).strftime("%Y-%m-%d")}"%> class="md:w-full px-1 focus-visible:outline-none" data-manager-target="dueDateItem"><%= due_date %></li>
    <% end %>
  <% end %>
</ul>

