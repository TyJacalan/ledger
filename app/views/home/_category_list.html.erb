<div id="category-list-container" class="flex flex-col gap-4 h-12 md:h-full w-full md:w-3/12 px-4 py-2 home-box" tabindex="2">
  <h1>Categories</h1>
  <ul id="category-list" class="flex flex-row md:flex-col h-full w-full items-start justify-start gap-4 overflow-y-auto">
    <% @categories.each do |category| %>
      <li data-user-id="<%= category.user_id %>" data-category-id="<%= category.id %>"> <%= category.name %></li>
    <% end %>
  </ul>
</div>

