<div id="task-list-container" class="h-full w-full home-box" tabindex="3">
  <ul id="task-list" class="flex flex-col gap-2">
      <li class="text-primary">
        <div class="scrollbar-none">Name</div>
        <div class="scrollbar-none">Status</div>
        <div class="scrollbar-none">Category</div>
        <div class="scrollbar-none">Due Date</div>
      </li>
    <% @tasks.each do |task| %>
      <li class="w-full px-1" data-user-id="<%= task.user_id %>" data-task-id="<%= task.id %>" >
        <%= content_tag :div, task.name, class: "scrollbar-none overflow-hidden whitespace-nowrap" %>
        <%= content_tag :div, task.status, class: "scrollbar-none overflow-hidden whitespace-nowrap" %>
        <%= content_tag :div, task.category.name, class: "scrollbar-none overflow-hidden whitespace-nowrap" %>
        <%= content_tag :div, task.formatted_due_date, class: "scrollbar-none overflow-hidden whitespace-nowrap" %>
      </li>
    <% end %>
    </ul>
</div>
